<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">
    <record id="cron_ebics_download" model="ir.cron">
        <field name="name">Automated EBICS Download</field>
        <field name="model_id" ref="account_ebics.model_ebics_xfer"/>
        <field name="active" eval="False"/>
        <field name="state">code</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 03:00:00')" />
        <field name="code">
today = datetime.date.today()
yesterday = today - datetime.timedelta(days=1)
for config in env["ebics.config"].search([("state", "=", "confirm")]):
    model.download_by_date(config, yesterday, yesterday)
        </field>
    </record>
</odoo>
